<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
    PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>
    <settings>
        <setting name="lazyLoadingEnabled" value="false" />
        <setting name="mapUnderscoreToCamelCase" value="true"/>
    </settings>

    <typeAliases>
    	<typeAlias type="lhdt.domain.AccessLog" alias="accessLog" />
    	<typeAlias type="lhdt.domain.ConverterJob" alias="converterJob" />
    	<typeAlias type="lhdt.domain.ConverterJobFile" alias="converterJobFile" />
		<typeAlias type="lhdt.domain.DataAdjustLog" alias="dataAdjustLog" />
		<typeAlias type="lhdt.domain.DataAttribute" alias="dataAttribute" />
		<typeAlias type="lhdt.domain.DataLibraryGroup" alias="dataLibraryGroup" />
		<typeAlias type="lhdt.domain.DataLibrary" alias="dataLibrary" />
		<typeAlias type="lhdt.domain.DataFileInfo" alias="dataFileInfo" />
		<typeAlias type="lhdt.domain.DataFileParseLog" alias="dataFileParseLog" />
		<typeAlias type="lhdt.domain.DataSmartTilingFileInfo" alias="dataSmartTilingFileInfo" />
		<typeAlias type="lhdt.domain.DataSmartTilingFileParseLog" alias="dataSmartTilingFileParseLog" />
		<typeAlias type="lhdt.domain.DataAttributeFileInfo" alias="dataAttributeFileInfo" />
		<typeAlias type="lhdt.domain.DataObjectAttribute" alias="dataObjectAttribute" />
		<typeAlias type="lhdt.domain.DataObjectAttributeFileInfo" alias="dataObjectAttributeFileInfo" />
		<typeAlias type="lhdt.domain.DataGroup" alias="dataGroup" />
		<typeAlias type="lhdt.domain.DataInfo" alias="dataInfo" />
		<typeAlias type="lhdt.domain.DataInfoSimple" alias="dataInfoSimple" />
		<typeAlias type="lhdt.domain.DataInfoLog" alias="dataInfoLog" />
		<typeAlias type="lhdt.domain.DesignLayerGroup" alias="designLayerGroup" />
		<typeAlias type="lhdt.domain.DesignLayer" alias="designLayer" />
		<typeAlias type="lhdt.domain.DesignLayerAttribute" alias="designLayerAttribute" />
		<typeAlias type="lhdt.domain.DesignLayerFileInfo" alias="designLayerFileInfo" />
		<typeAlias type="lhdt.domain.DesignLayerLog" alias="designLayerLog" />
		<typeAlias type="lhdt.domain.GeoPolicy" alias="geoPolicy" />
		<typeAlias type="lhdt.domain.Issue" alias="issue" />
    	<typeAlias type="lhdt.domain.Layer" alias="layer" />
    	<typeAlias type="lhdt.domain.LayerGroup" alias="layerGroup" />
    	<typeAlias type="lhdt.domain.LayerFileInfo" alias="layerFileInfo" />
