    	<typeAlias type="lhdt.domain.Policy" alias="policy" />
    	<typeAlias type="lhdt.domain.Role" alias="role" />
		<typeAlias type="lhdt.domain.UploadData" alias="uploadData" />
		<typeAlias type="lhdt.domain.UploadDataFile" alias="uploadDataFile" />
    	<typeAlias type="lhdt.domain.UserInfo" alias="userInfo" />
    	<typeAlias type="lhdt.domain.UserGroup" alias="userGroup" />
    	<typeAlias type="lhdt.domain.UserGroupMenu" alias="userGroupMenu" />
    	<typeAlias type="lhdt.domain.UserGroupRole" alias="userGroupRole" />
    	<typeAlias type="lhdt.domain.UserPolicy" alias="userPolicy"/>
    	<typeAlias type="lhdt.domain.UserSession" alias="userSession" />
    	<typeAlias type="lhdt.domain.Widget" alias="widget" />
    </typeAliases>

	<typeHandlers>
		<typeHandler handler="org.apache.ibatis.type.EnumOrdinalTypeHandler" javaType="java.math.RoundingMode"/>
		<!--<typeHandler handler="org.apache.ibatis.type.LocalDateTimeTypeHandler" javaType="java.time.LocalDateTime"/>-->
		<typeHandler handler="lhdt.typehandler.LocalDateTimeTypeHandler" javaType="java.time.LocalDateTime" />
	</typeHandlers>

</configuration>
